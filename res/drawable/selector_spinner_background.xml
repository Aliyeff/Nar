<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <layer-list >
            <item >
                <shape
                    android:padding="@dimen/padding_small" >
                    <gradient
                        android:angle="-90"        
                        android:startColor="@color/shape_gradient_up"
                        android:endColor="@color/shape_gradient_down"
                        android:type="linear" />
                    <corners
                        android:radius="@dimen/corner_radius_small" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/shape_border_gray" />
                </shape>
            </item>
            
            <item
                android:top="12dp"
                android:right="15dp" >
                <bitmap android:src="@drawable/down_arrow"
                        android:gravity="center_vertical|right" />    
            </item>
        </layer-list>
    </item>

</selector>
